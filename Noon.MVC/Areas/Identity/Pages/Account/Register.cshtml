@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
        margin: 0;
        min-height: 100vh;
        position: relative;
    }

    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100%;
        padding: 20px;
    }

    .card {
        width: 400px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 40px;
    }

    .card-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .form-floating input {
        border-radius: 5px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .form-group {
        margin-bottom: 20px;
    }
</style>

<div class="container">
    <div class="card">
        <div class="card-header">
            <h1>@ViewData["Title"]</h1>
        </div>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="mb-3">
                <label for="inputEmail" class="form-label">Email address</label>
                <input asp-for="Input.Email" id="inputEmail" class="form-control" autocomplete="username" aria-describedby="emailHelp" placeholder="name@example.com" required>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="inputPassword" class="form-label">Password</label>
                <input asp-for="Input.Password" type="password" id="inputPassword" class="form-control" autocomplete="new-password" placeholder="Password" required>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="confirmPassword" class="form-label">Confirm Password</label>
                <input asp-for="Input.ConfirmPassword" type="password" id="confirmPassword" class="form-control" autocomplete="new-password" placeholder="Confirm Password" required>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            @* Reuse the select list from the first page *@

            @{
                var roles = (IEnumerable<SelectListItem>)ViewData["Roles"];
            }

            <div class="form-group">
                <label for="Role">Select Role:</label>
                <select asp-for="Role" class="form-control" asp-items="roles"></select>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
