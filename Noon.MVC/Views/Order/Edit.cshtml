@model OrderReturnDto
@{
    ViewData["Title"] = "Edit";
    Layout = "_navbarLayout";
}

<form asp-action="Edit" asp-route-id="@Model.Id">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="AppUserId" />
    <div class="form-group">
      <input type="text" readonly asp-for="DeliveryMethod" />
    </div>
    <div class="form-group">
        <input type="text" readonly asp-for="AppUser.Phone" />
    </div>
    <div class="form-group">
        <input type="text" readonly asp-for="AppUser.Country" />
    </div>
    <div class="form-group">
        <input type="text" readonly asp-for="AppUser.City" />
    </div>
  
    <div class="form-group">
        <input type="text" readonly asp-for="Total" />
    </div>
    
    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <select asp-for="Status" class="form-control">
            <option value="Pending">Pending</option>
            <option value="Payment Received">Payment Received</option>
            <option value="Payment Failed">Payment Failed</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>


