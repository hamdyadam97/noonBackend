@model IEnumerable<AliExpress.Dtos.Product.ProductViewDto>

@{
    ViewData["Title"] = "Products";
    Layout = "_navbarLayout";
}


<style>
    .btn-custom {
        display: inline-block;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        line-height: 1.5;
        border-radius: 0.25rem;
        transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        text-decoration: none;
        cursor: pointer;
    }

    .btn-success-custom {
        color: #fff;
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-danger-custom {
        color: #fff;
        background-color: #dc3545;
        border-color: #dc3545;
    }

    /* Adjust margin and padding as needed */
    .my-5-custom {
        margin-top: 1.25rem;
        margin-bottom: 1.25rem;
    }

    .my-10-custom {
        margin-top: 2.5rem;
        margin-bottom: 2.5rem;
    }

</style>



<h1>Products Pag</h1>


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            @* <th>
                @Html.DisplayNameFor(model => model.Image)
            </th> *@
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Image)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                        |
                        @Html.ActionLink("DetailsProduct", "DetailsProduct", new { id = item.Id }) |
                     @*    @Html.ActionLink("Delete", "SfotDelete", new { id = item.Id }) *@
                        <a href="#" class="btn btn-danger deactivate-btn" data-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>



<div class="btn-group">   
    @Html.ActionLink("Previous", "Previous", null, new { @class = "btn btn-danger", style = "margin-top: 20px; margin-bottom: 20px;" })
</div>

<div class="btn-group">
    @Html.ActionLink("Next", "Next", null, new { @class = "btn btn-success", style = "margin-top: 20px; margin-bottom: 20px;" })
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.deactivate-btn').click(function (e) {
                e.preventDefault();
                var categoryId = $(this).data('id');
                if (confirm('Are you sure you want to delete this product?')) {
                    window.location.href = '@Url.Action("SfotDelete", "Product")/' + categoryId;
                }
            });
        });
    </script>
}