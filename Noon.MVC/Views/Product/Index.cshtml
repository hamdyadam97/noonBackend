@model IEnumerable<AliExpress.Dtos.Product.ProductViewDto>

@{
    ViewData["Title"] = "Products";
    Layout = "_navbarLayout";
}

<h1>Products Pag</h1>


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            @* <th>
                @Html.DisplayNameFor(model => model.Image)
            </th> *@
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Image)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                        |
                        @Html.ActionLink("DetailsProduct", "DetailsProduct", new { id = item.Id }) |
                     @*    @Html.ActionLink("Delete", "SfotDelete", new { id = item.Id }) *@
                        <a href="#" class="btn btn-danger deactivate-btn" data-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>



